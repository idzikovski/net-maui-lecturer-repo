<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RealEstate.Views.EstatesPage"
             Title="EstatesPage">
    <Grid>
        <Image HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand"
               Source="background.jpg"
               Aspect="AspectFill"
               Opacity=".2"/>
        <CollectionView x:Name="collectionView"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="15,10"
                           Padding="15">
                        <VerticalStackLayout Spacing="10">
                            <Frame Padding="0">
                                <Image Source="{Binding Photo}"/>
                            </Frame>
                            <Label Text="{Binding EstateName}"
                                   FontSize="22"/>
                            <Label Text="{Binding Price, StringFormat='${0}'}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#385CFF"/>
                            <BoxView HeightRequest="1"
                                     Color="LightGray"/>
                            <HorizontalStackLayout Spacing="10">
                                <Image Source="bed.png"
                                       HeightRequest="15"/>
                                <Label Text="{Binding RoomNumber, StringFormat='{0} bedrooms'}"/>
                                <Image Source="bath.png"
                                       HeightRequest="15"/>
                                <Label Text="{Binding BathroomNumber, StringFormat='{0} bathrooms'}"/>
                                <Image Source="house.png"
                                       HeightRequest="15"/>
                                <Label Text="{Binding Area, StringFormat='{0}mÂ²'}"/>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>